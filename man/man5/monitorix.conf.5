.br
	25ip6       = SMTP, tcp6, in/out, 0, 1000, L
.br
	80          = HTTP, tcp,  in,     0, 1000, L
.br
	53t         = DNS,  tcp,  in,     0, 1000, L
.br
	53u         = DNS,  udp,  in,     0, 1000, L
.br
	49152:65534 = FTP_PSV, tcp, in,   0, 1000
.br
</desc>
.RE
